#!/bin/bash


keyword=journal
[[ ! -z "$1" ]] && keyword="$1"

if [[ ! -d "$JOURNAL_DIR" ]]; then
    journal_dir="$HOME/Documents/personal/journal"
fi

entry="$(date +%Y-%m-%d.$keyword.txt)"
file="${journal_dir}/${entry}"
ts=$(date +"%Y-%m-%d %H:%M:%S %Z")

touch "$file"
printf "\n[%s] - %s\n" "$ts" "$keyword" >> "$file"
vim + "$file"


